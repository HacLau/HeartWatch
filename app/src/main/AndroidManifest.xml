<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HeartWatch"
        tools:targetApi="31">
        <activity
            android:name=".view.RecordNewActivity"
            android:exported="false"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".view.ContentActivity"
            android:exported="false"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".view.RecordMoreActivity"
            android:exported="false"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".view.StepActivity"
            android:exported="false" />
        <activity
            android:name=".view.ScreenActivity"
            android:exported="false"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".view.StartActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="fullSensor">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:exported="false"
            android:screenOrientation="fullSensor" />
    </application>

</manifest>